node { 
    if (0)
    {
        stage ('example 1')
        {
            echo 'ex 1'
        }
        stage ('example 2')
        {
            echo 'ex 2'
        }
    }
    else 
    {
        stage ('example 1')
        {
            echo 'true ex 3'
        }
        stage ('example 2')
        {
            echo 'true ex 4'
        }
        parallel 
        {
            stage ('p1')
            {
                echo 'p1'
            }
        }
        parallel 
        {
            stage ('p2')
            {
                echo 'p2'
            }
        }
        parallel 
        {
            stage ('p3')
            {
                echo 'p3'
            }
        }
    }
}


node { 
    if (0)
    {
        stage ('example 1')
        {
            echo 'ex 1'
        }
        stage ('example 2')
        {
            echo 'ex 2'
        }
    }
    else 
    {
        stage ('example 1')
        {
            echo 'true ex 3'
        }
        stage ('example 2')
        {
            echo 'true ex 4'
        }
        parallel (p1)
        parallel (p2)
        parallel (p3)
    }
}

def p1 = stage ('p1')
{
    steps
    {
        echo "p1"
    }
}
def p2 = stage ('p2')
{
    steps
    {
        echo "p1"
    }
}
def p3 = stage ('p3')
{
    steps
    {
        echo "p1"
    }
}
node
{
    def mods;
    def feats;
    stage('Start')
    {
        echo 'Start'
        println('ls'.execute().text)

    }
    stage('List')
    {
        echo 'List'
        //print(listModules("code/*/modules/src/"));
        print(listModules("*"));
    }
    stage('Build')
    {
        echo 'Build'
    }
    stage('Test')
    {
        parallel StaticCodeAnalysis:
        {
            echo 'Static Code Analysis'
        }, 
        UnitTest:
        {
            echo 'Unit Test'
        }
    }
    stage('Deploy')
    {
        echo 'Deploy'
        deleteDir("*");
        'ls'.execute();
    }
    
}

/**
* @description: This function is used to delete all files at a especial location
* @param:
*       -path: Add a String with the 
*/
int deleteDir(path)
{
    if (path?.trim())
    {
        respond = 'rm -fr $path'.execute();
        println(respond);
        return 0;
    }
    return 1;
}


node
{
    def s_wdir="pipe_wdir"
    stage('Start')
    {

        'ls'.execute().text.println();
        sh('''
            mkdir pipe_wdir
            cd pipe_wdir
        ''')
        'ls'.execute().text.println();
        
    }
    stage('List')
    {
        echo 'List'
        //print(listModules("code/*/modules/src/"));
        print(listModules("*"));
    }
    stage('Build')
    {
        echo 'Build'
    }
    stage('Test')
    {
        parallel StaticCodeAnalysis:
        {
            echo 'Static Code Analysis'
        }, 
        UnitTest:
        {
            echo 'Unit Test'
        }
    }
    stage('Deploy')
    {
        echo 'Deploy'
    }
    stage('Stop')
    {
        'ls'.execute().text.println();
        sh('''
            cd ..
            rm -fr pipe_wdir
        ''')
        'ls'.execute().text.println();
    }
    
}

/**
* @description: This function is used to delete all files at a especial location
* @param:
*       -path: Add a String with the 
*/
int deleteDir(path)
{
    if (path?.trim())
    {
        respond = 'rm -fr $path'.execute();
        println(respond);
        return 0;
    }
    return 1;
}

